<style>
	.message {
		width: 50%;
		float: left;
		margin-left: 12%
	}
</style>

<div class="container message">
<br><h2>Your DM's</h2><br>
<h4>You are messaging <%= @slide.first().namo %></h4>
<% if @slide != nil %>
<% @dm.each do |d| %>
	<h4><%= @slide.first().namo %></h4>
	<br>
	<p><%= d.content %></p><br>
<% end %>
<% end %>
<form action="create" method="post">
	<input type="hidden" name="id" value="<%= @slide.first().id %>">
	<input type="text" name="content" placeholder="message">
	<input type="submit" value="Reply">
</form>
</div>